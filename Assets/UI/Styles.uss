:root {
    --color-lt-text: rgb(186, 109, 86);
    --color-dk-text: rgb(142, 89, 43);
    --color-lt-accent: rgb(219, 193, 160);
}

.overlay {
    height: 100%;
    -unity-font: resource('Fonts/Nunito-Medium');
    -unity-font-definition: initial;
}

.play {
    flex: 1;
}

#topbar {
    height: 80px;
    background-color: rgba(0, 0, 0, 0);
    align-items: center;
    justify-content: center;
    font-size: 200%;
    color: var(--color-dk-text);
    flex-direction: row;
    background-image: resource('Images/T_Frame_ButtonPaper_GUI');
    -unity-slice-left: 70;
    -unity-slice-right: 70;
    -unity-slice-top: 70;
    -unity-slice-bottom: 70;
    -unity-slice-scale: 0.5px;
}

#one-line-instruction {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    -unity-font: resource('Fonts/Nunito-Bold');
}

#button-section {
    margin-right: 35px;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    height: 75%;
    width: 10%;
}

#instruction-button {
    position: absolute;
    background-image: resource('Images/T_Icon_Question');
    background-color: rgba(0, 0, 0, 0);
    border-color: rgba(0, 0, 0, 0);
    right: 60px;
    height: 40px;
    width: 30px;
}

#instruction-button:hover {
    height: 45px;
    width: 33px;
}

#exit-button {
    position: absolute;
    background-image: resource('Images/T_Icon_Exit_GUI');
    background-color: rgba(0, 0, 0, 0);
    border-color: rgba(0, 0, 0, 0);
    height: 40px;
    width: 40px;
    margin-left: 20px;
}

#exit-button:hover {
    height: 45px;
    width: 45px;
}

.option-buttons {
    flex-direction: row;
    justify-content: center;
    flex: 1;
}

.word-button {
    background-color: rgba(0, 0, 0, 0);
    border-color: rgba(0, 0, 0, 0);
    background-image: resource('Images/T_Frame_SinglePaper_GUI');
    border-radius: 8px;
    min-width: 200px;
    height: 60px;
    color: var(--color-dk-text);
    margin-top: 10%;
    margin-left: 10%;
    margin-right: 10%;
    font-size: 160%;
    -unity-slice-left: 25;
    -unity-slice-right: 25;
    -unity-slice-top: 1;
    -unity-slice-bottom: 1;
    -unity-slice-scale: 0.5px;
}

.word-button:hover {
    background-color: rgba(142, 89, 43, 0.5);
}

#sentence-section {
    height: 100px;
    align-items: center;
}

#sentence {
    color: var(--color-dk-text);
    font-size: 200%;
    padding: 1.5%;
    padding-left: 4%;
    padding-right: 4%;
    background-image: resource('Images/T_Frame_ButtonPaper_GUI');
    -unity-slice-left: 70;
    -unity-slice-right: 70;
    -unity-slice-top: 70;
    -unity-slice-bottom: 70;
    -unity-slice-scale: 0.5px;
}

#panel-section {
    display: none;
    position: absolute;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 70;
}

#panel {
    flex-direction: column;
    align-self: center;
    align-items: center;
    position: absolute;
    min-height: 500px;
    width: 643px;
    top: 13%;
    background-image: resource('Images/T_Frame_ButtonPaper_GUI');
    -unity-slice-left: 70;
    -unity-slice-right: 70;
    -unity-slice-top: 70;
    -unity-slice-bottom: 70;
    padding: 60px;
}

#panel-headline {
    color: var(--color-lt-text);
    font-size: 180%;
    margin-bottom: 20px;
    -unity-font: resource('Fonts/Nunito-Bold');
}

#panel-headline-section {
    flex-direction: row;
}

#panel-headline-image {
    display: none;
    height: 45px;
    width: 45px;
    margin-left: 30px;
}

#panel-text {
    color: var(--color-dk-text);
    font-size: 150%;
    width: 100%;
    white-space: normal;
    flex-grow: 2;
    margin-left: 20px;
}

#panel-button {
    width: 309px;
    height: 60px;
    border-radius: 8px;
    font-size: 20px;
    -unity-font: resource('Fonts/Nunito-Black');
    color: var(--color-dk-text);
    background-image: resource('Images/T_Frame_ButtonTransparent_GUI');
    border-color: rgba(0, 0, 0, 0);
    -unity-slice-left: 30;
    -unity-slice-right: 30;
    -unity-slice-bottom: 1;
    -unity-slice-top: 1;
    -unity-background-image-tint-color: var(--color-lt-accent);
    background-color: rgba(0, 0, 0, 0);
    margin-top: 40px;
}

#panel-button:hover {
    width: 309px;
    height: 60px;
    border-radius: 8px;
    font-size: 20px;
    color: var(--color-dk-text);
    background-image: resource('Images/T_Frame_Button_GUI');
    -unity-slice-left: 30;
    -unity-slice-right: 30;
    -unity-slice-bottom: 1;
    -unity-slice-top: 1;
    -unity-background-image-tint-color: var(--color-lt-accent);
}

#instructions-section {
    display: none;
    position: absolute;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 70;
}

#instruction-panel {
    flex-direction: column;
    align-self: center;
    align-items: center;
    position: absolute;
    height: 505px;
    width: 700px;
    top: 15%;
    background-image: resource('Images/T_Frame_ButtonPaper_GUI');
    -unity-slice-left: 70;
    -unity-slice-right: 70;
    -unity-slice-top: 70;
    -unity-slice-bottom: 70;
    padding: 60px;
}

#instruction-text {
    flex-grow: 1;
}

#game-progress-container {
    position: absolute;
    top: 12%;
    left: 78%;
    height: 73%;
    width: 30%;
}

#progress-bar-container {
    rotate: 270deg;
    height: 40px;
    width: 350px;
    top: 40%;
}

#progress-bar {
    border-radius: 10px;
    border-color: rgb(43, 58, 85);
    border-width: 2px;
    background-image: resource('Images/ShadeGradientBlack');
    position: absolute;
    height: 100%;
    width: 100%;
}

.unity-progress-bar__container {
    min-height: 37px;
    min-width: 350px;
    border-radius: 10px;
}

.unity-progress-bar__background {
    height: 100%;
    border-radius: 10px;
    background-color: rgba(229, 247, 255, 0.6);
    border-color: rgb(229, 247, 255);
}

.unity-progress-bar__progress {
    background-color: rgba(0, 0, 0, 0);
    background-image: resource('Images/BarFilling');
    border-bottom-left-radius: 10px;
    border-top-left-radius: 10px;
    border-color: rgba(0, 0, 0, 0);
}

#star-container {
    position: absolute;
    height: 100%;
    width: 100%;
}

#star3 {
    transition: 0.3s linear 0.2s;
    background-image: resource('Images/star_blank');
    position: absolute;
    width: 68px;
    height: 68px;
    rotate: 90deg;
    left: 91%;
    top: -26%;
}

#star2 {
    transition: 0.3s linear 0.2s;
    background-image: resource('Images/star_blank');
    position: absolute;
    width: 68px;
    height: 68px;
    rotate: 90deg;
    left: 57%;
    top: -24%;
}

#star1 {
    transition: 0.3s linear 0.2s;
    background-image: resource('Images/star_blank');
    position: absolute;
    width: 68px;
    height: 68px;
    rotate: 90deg;
    left: 24%;
    top: -24%;
}

.star-scale-transition {
    scale: 1.2 1.2;
}

#score-container {
    position: relative;
    right: auto;
    bottom: auto;
    left: auto;
    top: 70%;
}

#score-label {
    color: rgb(255, 255, 255);
    font-size: 35px;
    -unity-font-style: bold;
    text-shadow: 3px 3px 0 var(--color-dk-text);
    letter-spacing: 12px;
    -unity-text-outline-width: 1px;
    -unity-text-align: upper-center;
}

.score-label-streak {
    text-shadow: 3px 3px 0 red;
    -unity-text-outline-color: white;
}

#streak-image {
    transition-property: scale, opacity;
    transition-duration: 2.5s;
    transition-timing-function: ease-in;
    position: relative;
    height: 80px;
    width: 59px;
    right: auto;
    top: auto;
    display: none;
    bottom: 90%;
    left: 15%;
}

.streak-image-transition {
    scale: 1.7;
    opacity: 0;
}

#streak-icon {
    --unity-image: resource('Images/streak_icon');
}

#streak-count {
    position: absolute;
    top: 37px;
    left: 28px;
    -unity-font-style: bold;
    color: white;
}

.divider {
    background-image: resource('Images/T_BG_Header_GUI');
    height: 15px;
    width: 100%;
    -unity-slice-left: 20;
    -unity-slice-top: 0;
    -unity-slice-right: 20;
    -unity-slice-bottom: 0;
    -unity-background-image-tint-color: var(--color-lt-text);
    margin-bottom: 20px;
}
